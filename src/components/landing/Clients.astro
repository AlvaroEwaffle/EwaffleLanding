---
interface Client {
  name: string;
  logo: string;
  width?: string;
}

const clients: Client[] = [
  {
    name: "We Techs",
    logo: "/assets/clientlogos/We Techs.svg",
    width: "120px"
  },
  {
    name: "Universidad Santo Tomás",
    logo: "/assets/clientlogos/UST.svg",
    width: "150px"
  },
  // {
  //   name: "ACHS",
  //   logo: "/assets/clientlogos/ACHS.svg",
  //   width: "100px"
  // },
  {
    name: "UNIACC",
    logo: "/assets/clientlogos/UNIACC.svg",
    width: "140px"
  },
  {
    name: "AccademIO",
    logo: "/assets/clientlogos/AccademIO.avif",
    width: "130px"
  },
  {
    name: "AIEP",
    logo: "/assets/clientlogos/AIEP.svg",
    width: "120px"
  },
  {
    name: "Duoc UC",
    logo: "/assets/clientlogos/Duoc UC.svg",
    width: "140px"
  },
  
  {
    name: "Universidad Gabriela Mistral",
    logo: "/assets/clientlogos/Universidad Gabriela Mistral.svg",
    width: "140px"
  }
];
---

<section class="py-16 bg-white overflow-hidden">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-12">
      Confían en nosotros
    </h2>
    
    <div class="relative">
      <!-- Gradient overlay left -->
      <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r from-white to-transparent z-10"></div>
      
      <!-- Gradient overlay right -->
      <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-white to-transparent z-10"></div>
      
      <!-- Logos container -->
      <div class="logos-slide-track flex items-center space-x-16 md:space-x-24">
        {clients.map((client) => (
          <div class="flex-none flex items-center justify-center min-w-[150px] h-24 bg-gray-50/50 rounded-lg">
            <img
              src={encodeURI(client.logo)}
              alt={`Logo de ${client.name}`}
              style={`width: ${client.width}`}
              class="object-contain brightness-0 opacity-70 hover:opacity-100 hover:brightness-100 transition-all duration-300"
              loading="lazy"
              onerror="this.style.display='none'"
            />
          </div>
        ))}
        {/* Duplicate logos for seamless scrolling */}
        {clients.map((client) => (
          <div class="flex-none flex items-center justify-center min-w-[150px] h-24 bg-gray-50/50 rounded-lg">
            <img
              src={encodeURI(client.logo)}
              alt={`Logo de ${client.name}`}
              style={`width: ${client.width}`}
              class="object-contain brightness-0 opacity-70 hover:opacity-100 hover:brightness-100 transition-all duration-300"
              loading="lazy"
              onerror="this.style.display='none'"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .logos-slide-track {
    animation: scroll 40s linear infinite;
    width: calc(150px * 16); /* 8 logos * 2 for duplicate set */
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-150px * 8)); /* Move back by width of one set of logos */
    }
  }

  .logos-slide-track:hover {
    animation-play-state: paused;
  }

  /* Ensure SVGs maintain aspect ratio */
  img[src$=".svg"] {
    aspect-ratio: auto;
    height: auto;
  }
</style> 