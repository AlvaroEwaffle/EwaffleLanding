---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "🤝 ¿Listo para escalar tu empresa y ofrecer algo realmente diferente?", 
  subtitle = "🎯 Agenda una reunión gratuita y descubre cómo podrías estar vendiendo cursos gamificados y digitales este mes." 
} = Astro.props;
---

<section class="relative py-24 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img 
      src="/assets/FONDO3.jpg" 
      alt="" 
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-primary/90"></div>
  </div>

  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5 pointer-events-none mix-blend-overlay">
    <img src="/assets/patronblancofullopacidad.png" alt="" class="w-full h-full object-cover" />
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-8">
      <!-- Logo -->
      <img 
        src="/assets/logoprimario.png" 
        alt="Ewaffle Logo" 
        class="h-16 md:h-20 mx-auto mb-8"
      />

      <!-- Content -->
      <h2 class="text-3xl md:text-5xl font-bold text-white drop-shadow-lg">
        {title}
      </h2>
      <p class="text-xl md:text-2xl font-medium text-yellow drop-shadow">
        {subtitle}
      </p>

      <!-- Benefits List -->
      <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="text-2xl mb-2">🚀</div>
          <div class="text-white font-medium">Escala sin contratar equipo</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="text-2xl mb-2">🎮</div>
          <div class="text-white font-medium">Cursos gamificados SCORM</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20">
          <div class="text-2xl mb-2">🏷️</div>
          <div class="text-white font-medium">100% marca blanca</div>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row justify-center items-center gap-4 pt-4">
        <a
          href="https://www.fidelidapp.cl/agendalanding/68028f6bd368134c0d8551f7"
          class="bg-accent hover:bg-accent/90 text-white px-8 py-4 rounded-full font-semibold transition-all duration-300 inline-flex items-center gap-2 hover:transform hover:-translate-y-1 hover:shadow-lg w-full sm:w-auto justify-center text-lg"
        >
          <span>Agendar con Ewaffle</span>
          <i class="ri-arrow-right-line text-xl"></i>
        </a>
        <a
          href="#contact"
          class="bg-white/10 hover:bg-white/20 border-2 border-white/20 hover:border-accent/50 px-8 py-4 rounded-full font-semibold transition-all duration-300 text-white hover:transform hover:-translate-y-1 hover:shadow-lg w-full sm:w-auto justify-center inline-flex items-center"
        >
          Solicitar Demo
        </a>
      </div>
    </div>
  </div>
</section> 