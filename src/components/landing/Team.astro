---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  description: string;
}

const teamMembers: TeamMember[] = [
  {
    name: "Álvaro Villena",
    role: "CEO & Fundador",
    image: "/team/Alvaro.jpeg",
    description: "Experto en transformación digital y educación. Más de 15 años liderando proyectos de innovación educativa."
  },
  {
    name: "Johana Tapia",
    role: "Directora de Contenidos",
    image: "/team/Johana.jpeg",
    description: "Especialista en diseño instruccional y desarrollo de contenidos educativos. Experiencia en metodologías de aprendizaje innovadoras."
  },
  {
    name: "Aaron Flores",
    role: "Desarrollador Senior",
    image: "/team/Aaron.jpeg",
    description: "Experto en desarrollo de plataformas educativas y tecnologías de aprendizaje. Especializado en UX/UI y accesibilidad."
  },
];
---

<section class="relative py-20 bg-white">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <img src="/assets/patronblancofullopacidad.png" alt="" class="w-full h-full object-cover" />
  </div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Title Section -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary">
        Nuestro Equipo
      </h2>
      <div class="w-24 h-1 bg-accent mx-auto mt-4"></div>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-8">
      {teamMembers.map((member) => (
        <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <!-- Image -->
          <div class="relative h-64 overflow-hidden">
            <img 
              src={member.image} 
              alt={member.name}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-1">
              {member.name}
            </h3>
            <p class="text-accent font-medium mb-3">
              {member.role}
            </p>
            <p class="text-gray-600">
              {member.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 