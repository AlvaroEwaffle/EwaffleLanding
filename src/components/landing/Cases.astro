<style>
  .cases {
    position: relative;
    padding: 4rem 2rem;
    overflow: hidden;
  }

  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/assets/FONDO2TITULOS.jpg');
    background-size: cover;
    background-position: center;
    z-index: 1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(26, 76, 139, 0.8);
    z-index: 2;
  }

  .container {
    position: relative;
    z-index: 3;
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    color: white;
    text-align: center;
    font-size: 2rem;
    margin-bottom: 3rem;
    position: relative;
  }

  h2::after {
    content: '';
    display: block;
    width: 100px;
    height: 4px;
    background-color: #FFD93B;
    margin: 1rem auto 0;
    border-radius: 2px;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    position: relative;
    transition: all 0.3s;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
  }

  .testimonial-icon {
    width: 50px;
    height: 50px;
    position: absolute;
    top: -25px;
    left: 50%;
    transform: translateX(-50%);
  }

  blockquote {
    color: #333333;
    font-size: 1.2rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
    padding-top: 1rem;
  }

  .author-info {
    text-align: right;
  }

  .author-info strong {
    color: #2874C6;
    display: block;
  }

  .author-info span {
    color: #666;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .cases {
      padding: 2rem 1rem;
    }

    h2 {
      font-size: 1.8rem;
      margin-bottom: 2rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
    }

    blockquote {
      font-size: 1.1rem;
    }
  }
</style> 