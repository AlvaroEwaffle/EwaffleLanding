// Footer minimalista con solo enlaces legales
---

<footer class="bg-primary text-white py-12 border-t border-white/10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Logo y Enlace Home -->
      <div class="text-center mb-8">
        <a href="/" class="inline-block opacity-80 hover:opacity-100 transition-opacity duration-300">
          <img 
            src="/assets/logoewchico.png" 
            alt="Ewaffle" 
            class="h-12 w-auto mx-auto"
          />
        </a>
      </div>

      <!-- Enlaces Legales -->
      <div class="flex flex-wrap justify-center items-center gap-6 mb-6 text-sm">
        <a 
          href="/privacidad" 
          class="text-white/70 hover:text-white transition-colors duration-300"
        >
          Política de Privacidad
        </a>
        <span class="text-white/30">•</span>
        <a 
          href="/terminos" 
          class="text-white/70 hover:text-white transition-colors duration-300"
        >
          Términos y Condiciones
        </a>
        <span class="text-white/30">•</span>
        <a 
          href="/cookies" 
          class="text-white/70 hover:text-white transition-colors duration-300"
        >
          Política de Cookies
        </a>
      </div>

      <!-- Información de Contacto Mínima -->
      <div class="text-center text-white/50 text-xs">
        <p>© 2024 Ewaffle. Todos los derechos reservados.</p>
        <p class="mt-1">Santiago, Chile</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style> 