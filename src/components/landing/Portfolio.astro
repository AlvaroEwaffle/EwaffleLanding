---
interface PortfolioItem {
  title: string;
  description: string;
  videoId: string;
  technologies: string[];
}

const portfolioItems: PortfolioItem[] = [
  {
    title: "Cápsulas Interactivas de Aprendizaje",
    description: "Refuerza el aprendizaje de tu equipo mediante bloques interactivos de aprendizaje. Integra video, imágenes, interacción y texto en una sóla unidad de aprendizaje.",
    videoId: "6f2OvAl89SA", // Replace with actual YouTube video ID
    technologies: ["Rise", "Storyline", "H5P", "HTML", "SCORM"]
  },
  {
    title: "Desarrollo Rapid Learning",
    description: "Metodología orientada a acelerar el proceso de desarrollo y construcción de cursos, generándolos en el menor tiempo y con el mínimo coste posible.",
    videoId: "8lSiTrjG6eg", // Replace with actual YouTube video ID
    technologies: ["Diseño Instruccional", "Animaciones", "Cápsulas de Aprendizaje"]
  },
  {
    title: "Producción Audiovisual",
    description: "Desarrollo de diseño instruccional y producción audiovisual de videos con talento en pantalla, incluyendo grabación, edición y producción de cápsulas de video para e-learning.",
    videoId: "V_r9XHlJbTQ", // Replace with actual YouTube video ID
    technologies: ["Grabación", "Edición", "Post-producción"]
  }
];
---

<section class="relative py-20 bg-white">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <img src="/assets/patronblancofullopacidad.png" alt="" class="w-full h-full object-cover" />
  </div>

  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Title Section -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary">
        Nuestro Portafolio
      </h2>
      <div class="w-24 h-1 bg-accent mx-auto mt-4"></div>
    </div>

    <!-- Portfolio Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {portfolioItems.map((item) => (
        <div class="group relative bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <!-- Video -->
          <div class="relative h-64 overflow-hidden">
            <iframe
              class="w-full h-full"
              src={`https://www.youtube.com/embed/${item.videoId}`}
              title={item.title}
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>

          <!-- Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-primary mb-3">
              {item.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {item.description}
            </p>
            
            <!-- Technologies -->
            <div class="flex flex-wrap gap-2">
              {item.technologies.map((tech) => (
                <span class="px-3 py-1 bg-accent/10 text-accent rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <a 
        href="#contact" 
        class="inline-block px-8 py-4 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors duration-300"
      >
        Solicitar Cotización
      </a>
    </div>
  </div>
</section> 