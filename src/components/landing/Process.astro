---
interface ProcessStep {
  title: string;
  description: string;
  icon: string;
  week: string;
}

const processSteps: ProcessStep[] = [
  {
    title: "Evaluación de tu Catálogo",
    description: "Analizamos tus cursos actuales (PDFs, PowerPoints) y identificamos oportunidades de transformación digital.",
    icon: "ri-search-line",
    week: "Semana 1"
  },
  {
    title: "Diseño de Experiencia Digital",
    description: "Convertimos tu contenido en experiencias gamificadas con IA, medallas y elementos interactivos.",
    icon: "ri-draft-line",
    week: "Semana 1-2"
  },
  {
    title: "Producción Multimedia",
    description: "Creamos cursos compatibles con todas las plataformas LMS, listos para implementar.",
    icon: "ri-computer-line",
    week: "Semana 2-3"
  },
  {
    title: "Integración de Marca",
    description: "Todo se personaliza con tu logo, colores e identidad. Ewaffle es tu backend invisible.",
    icon: "ri-palette-line",
    week: "Semana 3 - 4"
  },
  {
    title: "Implementación Rápida",
    description: "Montamos en tu plataforma o te damos la nuestra. Cursos funcionando en 2 semanas.",
    icon: "ri-rocket-line",
    week: "Semana 3-4"
  },
  {
    title: "Soporte y Escalamiento",
    description: "Te acompañamos en el crecimiento. Más productos para vender, sin partir de cero. Garantía de 6 meses de soporte.",
    icon: "ri-customer-service-line",
    week: "Semana 4+"
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Title Section -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">
        🔄 Nuestro Proceso de Transformación
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-8">
        Convertimos tu oferta tradicional en experiencias digitales modernas en solo 6 pasos, completos en 4 semanas
      </p>
      <div class="w-24 h-1 bg-accent mx-auto"></div>
    </div>

    <!-- Steps Grid with Timeline -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {processSteps.map((step, index) => (
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300 border-l-4 border-accent">
          <!-- Step Number and Icon -->
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="w-10 h-10 rounded-full bg-accent/20 flex items-center justify-center mr-4">
                <span class="text-accent font-bold">{index + 1}</span>
              </div>
              <div class="w-10 h-10 rounded-full bg-accent/20 flex items-center justify-center">
                <i class={`${step.icon} text-accent text-xl`}></i>
              </div>
            </div>
            <!-- Timeline Badge -->
            <div class="bg-accent/10 text-accent px-3 py-1 rounded-full text-sm font-semibold">
              {step.week}
            </div>
          </div>

          <!-- Content -->
          <h3 class="text-xl font-bold text-primary mb-3">{step.title}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>

<!-- Add Remix Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" /> 