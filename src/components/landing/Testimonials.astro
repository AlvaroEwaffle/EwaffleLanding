---
interface Testimonial {
  quote: string;
  author: string;
  position: string;
  company: string;
  avatar?: string;
}

const testimonials: Testimonial[] = [
  {
    quote: "Con Ewaffle pudimos lanzar cursos gamificados para nuestros clientes sin contratar diseñadores ni programadores. Todo con nuestra marca, funcionando en menos de 2 semanas.",
    author: "María González",
    position: "Coordinadora Académica",
    company: "Empresa Partner"
  },
  {
    quote: "La transformación de nuestros cursos tradicionales a experiencias digitales gamificadas nos permitió aumentar nuestras ventas en un 40% en el primer trimestre.",
    author: "Carlos Rodríguez",
    position: "Director Comercial",
    company: "Centro de Capacitación"
  },
  {
    quote: "Ewaffle nos ayudó a posicionarnos como una empresa moderna y tecnológica. Nuestros clientes quedan impresionados con la calidad de nuestros cursos.",
    author: "Ana Silva",
    position: "Gerente General",
    company: "Instituto de Formación"
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">
        💬 ¿Qué dicen nuestros partners?
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Descubre cómo otras empresas han transformado su oferta con Ewaffle
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-lg shadow-lg p-8 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
          <div class="mb-6">
            <div class="text-4xl mb-4">💬</div>
            <blockquote class="text-gray-700 italic leading-relaxed">
              "{testimonial.quote}"
            </blockquote>
          </div>
          
          <div class="flex items-center">
            <div class="w-12 h-12 bg-accent/20 rounded-full flex items-center justify-center mr-4">
              <span class="text-accent font-semibold text-lg">
                {testimonial.author.split(' ').map(name => name[0]).join('')}
              </span>
            </div>
            <div>
              <div class="font-semibold text-primary">{testimonial.author}</div>
              <div class="text-sm text-gray-600">{testimonial.position}</div>
              <div class="text-sm text-accent font-medium">{testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Success Metrics -->
    <div class="mt-16 bg-accent/10 rounded-lg p-8 border border-accent/20">
      <h3 class="text-2xl font-bold text-primary text-center mb-8">
        📊 Resultados que hablan por sí solos
      </h3>
      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-accent mb-2">40%</div>
          <div class="text-gray-600">Aumento en ventas</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-accent mb-2">2</div>
          <div class="text-gray-600">Semanas de implementación</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-accent mb-2">100%</div>
          <div class="text-gray-600">Marca blanca</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-accent mb-2">SCORM</div>
          <div class="text-gray-600">Compatible</div>
        </div>
      </div>
    </div>
  </div>
</section> 