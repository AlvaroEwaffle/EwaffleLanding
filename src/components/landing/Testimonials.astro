---
interface Testimonial {
  quote: string;
  author: string;
  position: string;
  company: string;
  avatar?: string;
  date: string;
  rating: number;
  verified: boolean;
}

const testimonials: Testimonial[] = [
  {
    quote: "Con Ewaffle pudimos lanzar cursos gamificados para nuestros clientes sin contratar diseñadores ni programadores. Todo con nuestra marca, funcionando en menos de 2 semanas.",
    author: "María González",
    position: "Coordinadora Académica",
    company: "Empresa Partner",
    date: "2025-01-15",
    rating: 5,
    verified: true
  },
  {
    quote: "La transformación de nuestros cursos tradicionales a experiencias digitales gamificadas nos permitió aumentar nuestras ventas en un 40% en el primer trimestre.",
    author: "Carlos Rodríguez",
    position: "Director Comercial",
    company: "Centro de Capacitación",
    date: "2025-01-10",
    rating: 5,
    verified: true
  },
  {
    quote: "Ewaffle nos ayudó a posicionarnos como una empresa moderna y tecnológica. Nuestros clientes quedan impresionados con la calidad de nuestros cursos.",
    author: "Ana Silva",
    position: "Gerente General",
    company: "Instituto de Formación",
    date: "2025-01-08",
    rating: 5,
    verified: true
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">
        ⭐ ¿Qué dicen nuestros partners?
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Descubre cómo otras empresas han transformado su oferta con Ewaffle
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-shadow duration-300">
          <!-- Header with Profile Picture, Name, Date, and Google Icon -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-accent rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-lg">
                  {testimonial.author.split(' ').map(name => name[0]).join('')}
                </span>
              </div>
              <div>
                <div class="font-semibold text-gray-900 text-sm">{testimonial.author}</div>
                <div class="text-gray-500 text-xs">{testimonial.date}</div>
              </div>
            </div>
            <!-- Google Icon -->
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
            </div>
          </div>

          <!-- Star Rating and Verified Badge -->
          <div class="flex items-center space-x-2 mb-4">
            <div class="flex items-center space-x-1">
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </div>
            {testimonial.verified && (
              <div class="flex items-center space-x-1">
                <div class="w-4 h-4 bg-blue-500 rounded-full flex items-center justify-center">
                  <svg class="w-2.5 h-2.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-xs text-blue-600 font-medium">Verificado</span>
              </div>
            )}
          </div>

          <!-- Testimonial Content -->
          <div class="mb-4">
            <p class="text-gray-700 leading-relaxed text-sm">
              "{testimonial.quote}"
            </p>
          </div>
          
          <!-- Author Info -->
          <div class="border-t border-gray-100 pt-4">
            <div class="text-sm text-gray-600">{testimonial.position}</div>
            <div class="text-sm text-accent font-medium">{testimonial.company}</div>
          </div>
        </div>
      ))}
    </div>

    <!-- Success Metrics -->
    <div class="mt-16 bg-accent/10 rounded-lg p-8 border border-accent/20">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-primary mb-2">98%</div>
          <div class="text-gray-600">Satisfacción de clientes</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary mb-2">2 semanas</div>
          <div class="text-gray-600">Tiempo promedio de entrega</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-primary mb-2">40%</div>
          <div class="text-gray-600">Aumento en ventas promedio</div>
        </div>
      </div>
    </div>
  </div>
</section> 