<script>
  const recommendations = {
    courses: {
      title: "Cursos Gamificados SCORM",
      description: "Perfecto para ti. Podemos transformar tu contenido (PDFs, PowerPoints) en cursos SCORM gamificados con IA. Ideal si ya tienes contenido y quieres digitalizarlo r谩pidamente.",
      link: "#contact"
    },
    platform: {
      title: "Plataforma LMS",
      description: "Nuestra plataforma LMS completa es ideal para ti. Incluye gesti贸n de usuarios, desaf铆os, gamificaci贸n, seguimiento de progreso y m谩s. Escalable desde 10 hasta 10,000+ usuarios.",
      link: "/lms"
    },
    ai: {
      title: "Chatbots IA",
      description: "Nuestros chatbots con tecnolog铆a RAG son perfectos para tu necesidad. Asistentes inteligentes 24/7 que responden preguntas bas谩ndose en tu contenido educativo.",
      link: "/ia-chatbots"
    },
    multimedia: {
      title: "Producci贸n Multimedia",
      description: "Nuestro servicio de producci贸n multimedia es lo que necesitas. Videos profesionales, contenido interactivo (Genially, H5P), audio de alta calidad y dise帽o gr谩fico.",
      link: "/multimedia"
    },
    certification: {
      title: "Certificaciones Digitales",
      description: "Nuestro sistema de certificaciones digitales es perfecto para ti. Certificados verificables con c贸digos QR, cumplimiento normativo y credenciales profesionales.",
      link: "/certificaciones"
    },
    enterprise: {
      title: "Soluciones Empresariales",
      description: "Nuestra suite empresarial completa es ideal para tu organizaci贸n. Incluye LMS escalable, CRM, gesti贸n de leads, cat谩logo de recursos, cotizaciones y m谩s.",
      link: "/soluciones-empresariales"
    }
  };

  document.addEventListener('DOMContentLoaded', () => {
    const answerButtons = document.querySelectorAll('.answer-btn');
    const resultsDiv = document.getElementById('results');
    const recommendationContent = document.getElementById('recommendation-content');
    const restartBtn = document.getElementById('restart-btn');

    answerButtons.forEach(button => {
      button.addEventListener('click', () => {
        const answer = button.getAttribute('data-answer');
        const recommendation = recommendations[answer];

        if (recommendation) {
          recommendationContent.innerHTML = `
            <h4 class="text-xl font-bold text-primary mb-3">${recommendation.title}</h4>
            <p class="text-lg mb-4">${recommendation.description}</p>
          `;
          resultsDiv.classList.remove('hidden');
          resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
      });
    });

    if (restartBtn) {
      restartBtn.addEventListener('click', () => {
        resultsDiv.classList.add('hidden');
        document.getElementById('question-1').scrollIntoView({ behavior: 'smooth', block: 'start' });
      });
    }
  });
</script>

<style>
