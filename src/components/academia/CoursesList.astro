---
import coursesData from '../../data/courses.json';
import CourseCard from './CourseCard.astro';
---

<section class="py-20 px-4 sm:px-6 lg:px-8 bg-white" data-courses-section>
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-primary mb-4">Nuestros Cursos</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Aprende las habilidades más demandadas en e-learning y diseño instruccional
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {coursesData.courses.map((course) => (
        <CourseCard course={course} />
      ))}
    </div>

  </div>
</section>
