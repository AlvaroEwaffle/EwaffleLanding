// Instructors data
const instructors = [
  {
    id: 1,
    name: "Johana Tapia",
    role: "Fundadora de Ewaffle - Especialista en estrategias de aprendizaje digital",
    image: JohanaImage,
    imageAlt: "Johana Tapia - Fundadora y Directora de Contenidos de Ewaffle",
    description: "Especializada en metodologías innovadoras para el aprendizaje digital, su enfoque garantiza que cada curso sea atractivo y efectivo.",
    longDescription: "Acompaño a diferentes organizaciones a desarrollar estrategias y modelos de aprendizaje en línea basados en procesos ágiles y customizados a las necesidades y realidades de cada organización.",
