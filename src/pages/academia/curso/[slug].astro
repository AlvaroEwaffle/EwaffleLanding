---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import DiscountPopup from '../../../components/DiscountPopup.astro';
import coursesData from '../../../data/courses.json';

export async function getStaticPaths() {
  return coursesData.courses.map((course) => ({
    params: { slug: course.slug },
    props: { course },
  }));
}

const { course } = Astro.props;
const { title, description, keywords } = course.seo;
---

<BaseLayout {title} {description}>
  <main class="min-h-screen">
    <!-- 1. Hero Section (Above the fold) -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-black">
      <!-- Course Background Image -->
      <div class="absolute inset-0 z-0">
        <img 
          src="/src/assets/CourseBg.png"
          alt="Course Background"
          class="w-full h-full object-cover"
        />
        <!-- Black Overlay -->
        <div class="absolute inset-0 bg-black/70"></div>
      </div>

      <!-- Animated Background Elements -->
      <div class="absolute inset-0 z-10">
        <!-- Floating Stars -->
        <div class="absolute top-20 left-10 w-2 h-2 bg-yellow rounded-full animate-pulse"></div>
        <div class="absolute top-32 right-20 w-1 h-1 bg-accent rounded-full animate-ping"></div>
        <div class="absolute top-40 left-1/4 w-1.5 h-1.5 bg-white rounded-full animate-pulse"></div>
        <div class="absolute top-60 right-1/3 w-1 h-1 bg-yellow rounded-full animate-ping"></div>
        <div class="absolute top-80 left-1/2 w-2 h-2 bg-accent rounded-full animate-pulse"></div>
        
        <!-- Floating Shapes -->
        <div class="absolute top-24 right-10 w-4 h-4 border border-white/30 rotate-45 animate-spin" style="animation-duration: 20s;"></div>
        <div class="absolute top-48 left-16 w-3 h-3 bg-white/20 rounded-full animate-bounce" style="animation-duration: 3s;"></div>
        <div class="absolute top-72 right-1/4 w-2 h-2 bg-yellow/40 rounded-full animate-pulse"></div>
      </div>

      <!-- Content -->
      <div class="relative z-30 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          {course.title}
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-4xl mx-auto leading-relaxed">
          {course.subtitle}
        </p>

        <!-- CTA Principal -->
        <div class="mb-8">
          <a 
            href={course.payLink}
            target="_blank"
            class="inline-flex items-center justify-center px-8 py-4 bg-accent text-white rounded-full font-bold text-xl hover:bg-secondary/90 transition-all duration-300 shadow-2xl hover:shadow-accent/25 hover:scale-105"
          >
            Inscríbete Ahora
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>



        <!-- Prueba Social -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-white/90">
          <div class="flex items-center gap-3">
            <div class="flex items-center gap-2">
              <span class="text-2xl">👥</span>
              <span class="text-sm font-semibold">+{course.students} estudiantes</span>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="flex text-yellow">
              {Array.from({ length: 5 }).map((_, i) => (
                <span key={i} class="text-lg">⭐</span>
              ))}
            </div>
            <div class="flex items-center gap-2">
              <span class="text-2xl">🏆</span>
              <span class="text-sm font-semibold">{course.rating}/5</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 2. Resultados de Aprendizaje Clave -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16 scroll-animate opacity-0 translate-y-8">
          <h2 class="text-4xl font-bold text-primary mb-4">🎯 ¿Qué vas a lograr?</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">Resultados concretos que obtendrás al finalizar el curso</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {course.learningOutcomes.map((outcome, index) => (
            <div key={index} class="relative group h-full scroll-animate opacity-0 translate-y-8" data-delay={index * 200}>
              <div class="absolute -inset-0.5 bg-gradient-to-r from-accent to-secondary rounded-2xl blur opacity-30 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
              <div class="relative bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 h-full flex flex-col">
                <div class="text-4xl mb-4">{outcome.icon}</div>
                <h3 class="text-xl font-bold text-primary mb-3">{outcome.title}</h3>
                <p class="text-gray-600 flex-grow">{outcome.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- 3. Sección "Qué te vas a encontrar" -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-primary relative overflow-hidden">
      <!-- Animated Background Letters -->
      <div class="absolute inset-0 pointer-events-none">
        <!-- EWAFFLE Letters - Top Section -->
        <div class="absolute top-10 left-10 text-8xl font-black text-white/10 animate-float" style="animation-delay: 0s;">E</div>
        <div class="absolute top-20 right-20 text-6xl font-black text-white/10 animate-float" style="animation-delay: 1s;">W</div>
        <div class="absolute top-40 left-1/4 text-7xl font-black text-white/10 animate-float" style="animation-delay: 2s;">A</div>
        <div class="absolute top-60 right-1/3 text-9xl font-black text-white/10 animate-float" style="animation-delay: 3s;">F</div>
        
        <!-- EWAFFLE Letters - Middle Section -->
        <div class="absolute top-1/3 left-1/2 text-5xl font-black text-white/10 animate-float" style="animation-delay: 4s;">F</div>
        <div class="absolute top-1/3 right-1/4 text-8xl font-black text-white/10 animate-float" style="animation-delay: 5s;">L</div>
        <div class="absolute top-1/2 left-1/3 text-6xl font-black text-white/10 animate-float" style="animation-delay: 6s;">E</div>
        <div class="absolute top-1/2 right-10 text-7xl font-black text-white/10 animate-float" style="animation-delay: 7s;">E</div>
        
        <!-- EWAFFLE Letters - Bottom Section -->
        <div class="absolute top-2/3 left-10 text-6xl font-black text-white/10 animate-float" style="animation-delay: 8s;">W</div>
        <div class="absolute top-2/3 right-1/3 text-5xl font-black text-white/10 animate-float" style="animation-delay: 9s;">A</div>
        <div class="absolute top-3/4 left-1/4 text-8xl font-black text-white/10 animate-float" style="animation-delay: 10s;">F</div>
        <div class="absolute top-3/4 right-1/5 text-4xl font-black text-white/10 animate-float" style="animation-delay: 11s;">F</div>
        <div class="absolute top-5/6 left-3/4 text-7xl font-black text-white/10 animate-float" style="animation-delay: 12s;">L</div>
        <div class="absolute top-5/6 right-10 text-6xl font-black text-white/10 animate-float" style="animation-delay: 13s;">E</div>
        
        <!-- Additional floating letters - Distributed vertically -->
        <div class="absolute top-1/6 left-3/4 text-4xl font-black text-white/5 animate-float" style="animation-delay: 14s;">E</div>
        <div class="absolute top-1/4 right-10 text-5xl font-black text-white/5 animate-float" style="animation-delay: 15s;">W</div>
        <div class="absolute top-1/2 left-1/6 text-6xl font-black text-white/5 animate-float" style="animation-delay: 16s;">A</div>
        <div class="absolute top-2/3 right-2/3 text-7xl font-black text-white/5 animate-float" style="animation-delay: 17s;">F</div>
        <div class="absolute top-3/4 left-4/5 text-4xl font-black text-white/5 animate-float" style="animation-delay: 18s;">F</div>
        <div class="absolute top-5/6 right-1/5 text-5xl font-black text-white/5 animate-float" style="animation-delay: 19s;">L</div>
        <div class="absolute top-1/5 left-1/6 text-8xl font-black text-white/5 animate-float" style="animation-delay: 20s;">E</div>
        <div class="absolute top-4/5 left-1/2 text-5xl font-black text-white/5 animate-float" style="animation-delay: 21s;">W</div>
      </div>

      <div class="max-w-6xl mx-auto relative z-10">
        <div class="text-center mb-16 scroll-animate opacity-0 translate-y-8">
          <h2 class="text-4xl font-bold text-white mb-4">📚 ¿Qué incluye el curso?</h2>
          <p class="text-xl text-white/90 max-w-2xl mx-auto">Todo lo que necesitas para dominar esta habilidad</p>
        </div>

        <!-- Dynamic Cards Container -->
        <div class="space-y-8">
          {course.courseContent.map((content, index) => (
            <div 
              key={index} 
              class="course-content-card opacity-0 translate-y-8 transition-all duration-700 ease-out"
              data-delay={index * 200}
            >
              <div class="bg-white/95 backdrop-blur-sm p-8 rounded-2xl shadow-2xl hover:shadow-3xl transition-all duration-300 border-l-4 border-accent hover:bg-white">
                <div class="flex items-center gap-6 mb-4">
                  <div class="text-4xl">{content.icon}</div>
                  <div class="flex-1">
                    <h3 class="text-2xl font-bold text-primary mb-2">{content.title}</h3>
                    <p class="text-accent font-semibold text-lg">{content.duration}</p>
                  </div>
                </div>
                <p class="text-gray-600 text-lg leading-relaxed">{content.description}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA después del contenido -->
        <div class="text-center mt-16">
          <a 
            href={course.payLink}
            target="_blank"
            class="inline-flex items-center justify-center px-8 py-4 bg-primary text-white rounded-full font-bold text-xl hover:bg-secondary/90 transition-all duration-300 shadow-2xl hover:shadow-primary/25 hover:scale-105"
          >
            Quiero Acceder a Todo Esto
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- 4. Oferta / Incentivo -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-primary to-secondary">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-4xl font-bold mb-6 scroll-animate opacity-0 translate-y-8">🎉 Oferta Especial de Lanzamiento</h2>
    
        <!-- Garantía -->
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 scroll-animate opacity-0 translate-y-8" data-delay="200">
          <h3 class="text-2xl font-bold mb-2 text-yellow">{course.guarantee.text}</h3>
          <p class="text-white/90">{course.guarantee.description}</p>
        </div>
      </div>
    </section>

    <!-- 5. Testimonial -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-gray-50 rounded-2xl p-8 scroll-animate opacity-0 translate-y-8">
          <div class="text-6xl text-accent mb-4">"</div>
          <blockquote class="text-2xl text-gray-700 mb-6 italic">
            {course.testimonial.text}
          </blockquote>
          <div class="text-center">
            <div class="font-bold text-primary text-lg">{course.testimonial.author}</div>
            <div class="text-gray-600">{course.testimonial.role}, {course.testimonial.company}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- 6. FAQs -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16 scroll-animate opacity-0 translate-y-8">
          <h2 class="text-4xl font-bold text-primary mb-4">❓ Preguntas Frecuentes</h2>
          <p class="text-xl text-gray-600">Resolvemos las dudas más comunes</p>
        </div>

        <div class="space-y-4">
          {course.faqs.map((faq, index) => (
            <details class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 scroll-animate opacity-0 translate-y-8" data-delay={index * 100}>
              <summary class="p-6 cursor-pointer font-semibold text-lg text-primary hover:text-accent transition-colors duration-300">
                {faq.question}
              </summary>
              <div class="px-6 pb-6 text-gray-600">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- 7. CTA Final -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-primary">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2 class="text-4xl font-bold mb-6 scroll-animate opacity-0 translate-y-8">🚀 ¿Listo para transformar tu carrera?</h2>
        <p class="text-xl mb-8 text-white/90 scroll-animate opacity-0 translate-y-8" data-delay="200">Únete a cientos de profesionales que ya están aplicando estas técnicas</p>
        
        <a 
          href={course.payLink}
          target="_blank"
          class="inline-flex items-center justify-center px-12 py-6 bg-accent text-white rounded-full font-bold text-2xl hover:bg-secondary/90 transition-all duration-300 shadow-2xl hover:shadow-accent/25 hover:scale-105 scroll-animate opacity-0 translate-y-8"
          data-delay="400"
        >
          Inscríbete Ahora
          <svg class="ml-3 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        
        <p class="mt-4 text-white/80 scroll-animate opacity-0 translate-y-8" data-delay="600">Garantía de 7 días • Acceso inmediato • Certificado incluido</p>
      </div>
    </section>

    <!-- 8. Footer Minimalista -->
    <footer class="py-8 px-4 sm:px-6 lg:px-8 bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto text-center">
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 text-sm">
          <a href="/" class="hover:text-accent transition-colors duration-300">Inicio</a>
          <span class="hidden sm:block">•</span>
          <a href="/academia" class="hover:text-accent transition-colors duration-300">Academia</a>
          <span class="hidden sm:block">•</span>
          <a href="/asesoria" class="hover:text-accent transition-colors duration-300">Asesoría</a>
          <span class="hidden sm:block">•</span>
          <a href="mailto:contacto@ewaffle.cl" class="hover:text-accent transition-colors duration-300">Contacto</a>
        </div>
        <div class="mt-4 text-xs text-gray-400">
          © 2024 Ewaffle. Todos los derechos reservados.
        </div>
      </div>
    </footer>
  </main>
  
  <!-- Discount Popup -->
  <DiscountPopup courseName={course.title} courseSlug={course.slug} />
</BaseLayout>

<!-- Structured Data for Course -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Course",
  "name": "{course.title}",
  "description": "{course.subtitle}",
  "provider": {
    "@type": "Organization",
    "name": "Ewaffle",
    "url": "https://www.ewaffle.cl"
  },
  "courseMode": "online",
  "educationalLevel": "{course.level.toLowerCase()}",
  "timeRequired": "P{course.duration.replace('semanas', 'W').replace('semana', 'W')}",
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock"
  },
  "instructor": {
    "@type": "Person",
    "name": "{course.instructor.name}",
    "jobTitle": "{course.instructor.title}"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{course.rating}",
    "ratingCount": "{course.students}"
  }
}
</script>

<!-- Discount Button Handler -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const showDiscountBtn = document.getElementById('show-discount-btn');
    
    if (showDiscountBtn && window.showDiscountPopup) {
      showDiscountBtn.addEventListener('click', () => {
        window.showDiscountPopup();
      });
    }

    // Scroll-triggered animations for all elements
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delay = entry.target.getAttribute('data-delay') || 0;
          setTimeout(() => {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }, delay);
        }
      });
    }, observerOptions);

    // Observe all animated elements
    const animatedElements = document.querySelectorAll('.scroll-animate, .course-content-card');
    animatedElements.forEach(element => {
      observer.observe(element);
    });
  });
</script>

<style>
  /* Animaciones personalizadas */
  @keyframes float {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
      opacity: 0.1;
    }
    25% { 
      transform: translateY(-15px) rotate(2deg); 
      opacity: 0.15;
    }
    50% { 
      transform: translateY(-25px) rotate(0deg); 
      opacity: 0.2;
    }
    75% { 
      transform: translateY(-15px) rotate(-2deg); 
      opacity: 0.15;
    }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* Scroll animations */
  .scroll-animate {
    transition: all 0.8s ease-out;
  }
  
  /* Efectos de hover para los elementos interactivos */
  details[open] summary {
    color: #fd5a93;
  }
  
  /* Mejoras visuales para el video de fondo */
  video {
    filter: brightness(0.7);
  }
</style>
